# Discord Bot Log Rotation Configuration
# Deploy to: /etc/logrotate.d/discord_bot on yo.tag.ooo
# Requires: sudo cp discord_bot.logrotate /etc/logrotate.d/discord_bot

/home/ubuntu/discord_bot.log {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 644 ubuntu ubuntu
    dateext
    dateformat -%Y%m%d
    postrotate
        # Signal the screen session to continue logging
        /bin/true
    endscript
}

/home/ubuntu/discord_bot_health.log {
    weekly
    rotate 4
    compress
    delaycompress
    missingok
    notifempty
    create 644 ubuntu ubuntu
    dateext
}

